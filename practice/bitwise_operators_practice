#include <stdio.h>

int main()
{
    char a = 5;
    printf("\t%d\n", a & 1);  // 一個單位對一個 / 0101 & 0001 = 0001
    printf("\t%d\n", a & 2);  // AND  0101 & 0010 = 0000
    printf("\t%d\n", a | 2);  // OR  0101 | 0010 = 0111
    printf("\t%d\n", a ^ 1);  // XOR 0000 0101 ^ 0000 0001 = 0000 0100
    printf("\t%d\n", ~ a);   // NOT 0000 0101 ~ = 1111 1010
    printf("\t%d\n", a >> 1); // SHIFT 右移_個位置 = /2 無條件捨去  0000 0101 >> 1 = 0000 0010
    printf("\t%d\n", a << 1); // SHIFT 左移_個位置 = x2   0000 0101 << 1 = 0000 1010
    
    char n = -6;  //1111 1010
    char mask = n >> (8 - 1);  //1111 1010 >> 7 => 1111 1111 - 無號整數永遠補0(邏輯右移)，這裡要補1。Char 型別佔 8bits (8byte)
    printf("what? %d\n", (n ^ mask) - mask);  //1111 1010 ^ 1111 1111 => 0000 0101 - 1111 1111 = 5 - (-1) = 6
    
    int i = 1;  //運算子的優先順序大部分是左到右 EX: a << b << c => (a <<ｂ)<< c
    i = i++ << 2 + 3 << --i;  //由下面步驟可知 = (++i)<<(2+3)<<(--i) = 1 << 5 << 1 = 100000 << 1 = 1000000 = 64
    printf("i = %d\n", i);
    
     //計算三步驟  1.把二元便一元 -(-1)=> +1
                //2.後置(i++ i--) > 一元(++i --i -i...) > 乘除 > 加減 > 位移 >...> 指定(+= -= ...)
                //3.檢查順序及式中同一變數值
    
    return 0;
}
